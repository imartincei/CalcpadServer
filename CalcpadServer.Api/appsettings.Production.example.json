{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Authentication": {
    "Provider": "OIDC",
    "Local": {
      "Enabled": false
    },
    "OIDC": {
      "Enabled": true,
      "Authority": "https://your-identity-provider.com",
      "ClientId": "calcpad-production",
      "ClientSecret": "your-production-client-secret",
      "Scope": "openid profile email calcpad-access",
      "ResponseType": "code",
      "CallbackPath": "/signin-oidc"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/calcpad.db"
  },
  "MinIO": {
    "Endpoint": "minio.production.com:9000",
    "AccessKey": "production-access-key",
    "SecretKey": "production-secret-key",
    "UseSSL": true
  }
}