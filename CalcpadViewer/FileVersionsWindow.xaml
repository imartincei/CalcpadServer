<Window x:Class="CalcpadViewer.FileVersionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Versions" Height="500" Width="700" ResizeMode="CanResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="FileNameText" Text="File: " FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="Select a version to download or view details." FontStyle="Italic" Foreground="Gray"/>
        </StackPanel>
        
        <!-- Versions List -->
        <DataGrid x:Name="VersionsDataGrid" Grid.Row="1" 
                  AutoGenerateColumns="False" SelectionMode="Single"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  SelectionChanged="VersionsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Version ID" Binding="{Binding VersionId}" Width="200"/>
                <DataGridTextColumn Header="Last Modified" Binding="{Binding LastModified, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="150"/>
                <DataGridTextColumn Header="Size" Binding="{Binding SizeFormatted}" Width="100"/>
                <DataGridCheckBoxColumn Header="Is Latest" Binding="{Binding IsLatest}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="ETag" Binding="{Binding ETag}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="DownloadVersionButton" Content="Download Selected Version" 
                    Padding="10,5" Margin="0,0,10,0" 
                    Click="DownloadVersionButton_Click" IsEnabled="False"/>
            <Button x:Name="CloseButton" Content="Close" 
                    Padding="10,5" Click="CloseButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>