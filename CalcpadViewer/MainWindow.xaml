<Window x:Class="CalcpadViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calcpad File Viewer" Height="600" Width="1000">
    <Window.Resources>
        <!-- ToggleButton Style for ComboBox -->
        <Style x:Key="ToggleButtonStyle1" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="20" />
                                </Grid.ColumnDefinitions>
                                <Path x:Name="Arrow" Grid.Column="1" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="LightBlue"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Multi-Select ComboBox Style -->
        <Style x:Key="MultiSelectComboBox" TargetType="{x:Type ComboBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid SnapsToDevicePixels="true" x:Name="MainGrid" Height="Auto" Width="Auto">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0"/>
                            </Grid.ColumnDefinitions>
                            <Popup AllowsTransparency="true" IsOpen="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                   Placement="Bottom" PopupAnimation="{DynamicResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}"
                                   Margin="1" x:Name="PART_Popup" Grid.ColumnSpan="2">
                                <Border x:Name="DropDownBorder" MaxHeight="{TemplateBinding MaxDropDownHeight}" MinWidth="{Binding Path=ActualWidth, ElementName=MainGrid}"
                                        Background="White" BorderBrush="Gray" BorderThickness="1">
                                    <ScrollViewer CanContentScroll="true">
                                        <ListBox x:Name="lstBox" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                 KeyboardNavigation.DirectionalNavigation="Contained" SelectionMode="Multiple" 
                                                 ItemsSource="{TemplateBinding ItemsSource}"
                                                 DisplayMemberPath="{TemplateBinding DisplayMemberPath}"
                                                 SelectionChanged="MultiSelectListBox_SelectionChanged"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                            <ToggleButton Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" Grid.ColumnSpan="2"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                          Style="{StaticResource ToggleButtonStyle1}"/>
                            <ItemsControl IsHitTestVisible="false" ItemsSource="{Binding Path=SelectedItems, ElementName=lstBox}" Margin="4,0,20,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel IsItemsHost="True" Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="LightBlue" CornerRadius="3" Margin="2" Padding="4,2">
                                            <TextBlock Text="{Binding Name}" FontSize="10"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Main Content with Tabs -->
        <TabControl x:Name="MainTabControl" Grid.Row="0" Margin="10" SelectionChanged="MainTabControl_SelectionChanged">
            <!-- Start Tab -->
            <TabItem Header="Start" x:Name="StartTab">
                <GroupBox Header="Connection Settings" Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- MinIO Settings -->
                        <Label Grid.Row="0" Grid.Column="0" Content="Endpoint:" VerticalAlignment="Center"/>
                        <TextBox x:Name="EndpointTextBox" Grid.Row="0" Grid.Column="1" Margin="5" Text="localhost:9000"/>
                        
                        <Button x:Name="ConnectButton" Grid.Row="0" Grid.Column="4" Content="Connect" 
                                Margin="10,5,0,5" Padding="10,5" Click="ConnectButton_Click"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="Access Key:" VerticalAlignment="Center"/>
                        <TextBox x:Name="AccessKeyTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Text="calcpad-admin"/>
                        
                        <Label Grid.Row="1" Grid.Column="2" Content="Secret Key:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <PasswordBox x:Name="SecretKeyBox" Grid.Row="1" Grid.Column="3" Margin="5"/>
                        
                        <CheckBox x:Name="UseSSLCheckBox" Grid.Row="1" Grid.Column="4" Content="Use SSL" 
                                  VerticalAlignment="Center" Margin="10,0,0,0"/>
                        
                        <!-- Admin Login -->
                        <Label Grid.Row="2" Grid.Column="0" Content="Admin User:" VerticalAlignment="Center"/>
                        <TextBox x:Name="AdminUsernameTextBox" Grid.Row="2" Grid.Column="1" Margin="5" Text="admin"/>
                        
                        <Label Grid.Row="2" Grid.Column="2" Content="Admin Password:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <PasswordBox x:Name="AdminPasswordBox" Grid.Row="2" Grid.Column="3" Margin="5"/>
                    </Grid>
                </GroupBox>
            </TabItem>
            
            <!-- Files Tab -->
            <TabItem Header="Files" x:Name="FilesTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Files List -->
                    <GroupBox Header="Files" Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <Button x:Name="RefreshButton" Content="Refresh" 
                                        Margin="5" Padding="5" Click="RefreshButton_Click"/>
                                <Button x:Name="UploadButton" Content="Upload File" 
                                        Margin="0,5,5,5" Padding="5" Click="UploadButton_Click" IsEnabled="False"/>
                                <Button x:Name="DownloadButton" Content="Download File" 
                                        Margin="0,5,5,5" Padding="5" Click="DownloadButton_Click" IsEnabled="False"/>
                                <Button x:Name="ViewVersionsButton" Content="View Versions" 
                                        Margin="0,5,5,5" Padding="5" Click="ViewVersionsButton_Click" IsEnabled="False"/>
                                <Button x:Name="DeleteButton" Content="Delete File" 
                                        Margin="0,5,5,5" Padding="5" Click="DeleteButton_Click" IsEnabled="False"
                                        Background="LightCoral"/>
                            </StackPanel>
                            
                            <!-- Tag Filter -->
                            <GroupBox Header="Filter by Tag" Grid.Row="1" Margin="5,0,5,5">
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <ComboBox x:Name="MultiTagFilterComboBox" Width="250" Margin="5"
                                              ItemsSource="{Binding Tags}"
                                              DisplayMemberPath="Name"
                                              Style="{StaticResource MultiSelectComboBox}"
                                              MaxDropDownHeight="150"/>
                                    <Button x:Name="ClearTagFilterButton" Content="Clear Filter" 
                                            Padding="10,5" Click="ClearTagFilterButton_Click"/>
                                </StackPanel>
                            </GroupBox>
                            
                            <!-- Category Tabs -->
                            <TabControl x:Name="CategoryTabControl" Grid.Row="2" SelectionChanged="CategoryTabControl_SelectionChanged">
                                <TabItem Header="All" x:Name="AllTab"/>
                                <TabItem Header="Working" x:Name="WorkingTab"/>
                                <TabItem Header="Photo" x:Name="PhotoTab"/>
                                <TabItem Header="Data" x:Name="DataTab"/>
                                <TabItem Header="Module" x:Name="ModuleTab"/>
                                <TabItem Header="Template" x:Name="TemplateTab"/>
                            </TabControl>
                            
                            <ListBox x:Name="FilesListBox" Grid.Row="3" Margin="5" 
                                     SelectionChanged="FilesListBox_SelectionChanged"/>
                        </Grid>
                    </GroupBox>
                    
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch" Background="LightGray"/>
                    
                    <!-- Metadata Panel -->
                    <GroupBox Header="File Metadata" Grid.Column="2">
                        <ScrollViewer>
                            <StackPanel x:Name="MetadataPanel" Margin="10">
                                <TextBlock x:Name="NoSelectionText" Text="Select a file to view metadata" 
                                           FontStyle="Italic" Foreground="Gray"/>
                                
                                <!-- File Info -->
                                <GroupBox x:Name="FileInfoGroup" Header="File Information" Visibility="Collapsed" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Label Grid.Row="0" Grid.Column="0" Content="File Name:" FontWeight="Bold"/>
                                        <TextBlock x:Name="FileNameText" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap"/>

                                        <Label Grid.Row="1" Grid.Column="0" Content="Size:" FontWeight="Bold"/>
                                        <TextBlock x:Name="FileSizeText" Grid.Row="1" Grid.Column="1"/>

                                        <Label Grid.Row="2" Grid.Column="0" Content="Last Modified:" FontWeight="Bold"/>
                                        <TextBlock x:Name="LastModifiedText" Grid.Row="2" Grid.Column="1"/>

                                        <Label Grid.Row="3" Grid.Column="0" Content="Content Type:" FontWeight="Bold"/>
                                        <TextBlock x:Name="ContentTypeText" Grid.Row="3" Grid.Column="1"/>

                                        <Label Grid.Row="4" Grid.Column="0" Content="ETag:" FontWeight="Bold"/>
                                        <TextBlock x:Name="ETagText" Grid.Row="4" Grid.Column="1" TextWrapping="Wrap"/>
                                    </Grid>
                                </GroupBox>

                                <!-- Metadata -->
                                <GroupBox x:Name="MetadataGroup" Header="Metadata" Margin="0,0,0,10">
                                    <ItemsControl x:Name="MetadataItems">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Column="0" Content="{Binding Key}" FontWeight="Bold"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Value}" TextWrapping="Wrap"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </GroupBox>
                                
                                <!-- Tags -->
                                <GroupBox x:Name="TagsGroup" Header="Tags">
                                    <ItemsControl x:Name="TagsItems">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Column="0" Content="{Binding Key}" FontWeight="Bold"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Value}" TextWrapping="Wrap"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Tags Tab -->
            <TabItem Header="Tags" x:Name="TagsTab" IsEnabled="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Tags List -->
                    <GroupBox Header="Pre-Defined Tags" Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <Button x:Name="RefreshTagsButton" Content="Refresh" 
                                            Margin="5" Padding="5" Click="RefreshTagsButton_Click"/>
                                </StackPanel>
                                
                                <!-- Add Tag Inline -->
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBox x:Name="NewTagTextBox" Width="200" Margin="0,0,5,0" 
                                             KeyDown="NewTagTextBox_KeyDown" 
                                             TextChanged="NewTagTextBox_TextChanged"
                                             MaxLength="100"
                                             ToolTip="Enter tag name and press Enter"/>
                                    <Button x:Name="AddTagButton" Content="Add" 
                                            Padding="10,3" Click="AddTagButton_Click"
                                            IsEnabled="False"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <ListBox x:Name="TagsListBox" Grid.Row="1" Margin="5" 
                                     ItemsSource="{Binding Tags}"
                                     SelectedItem="{Binding SelectedTag}"
                                     DisplayMemberPath="Name"/>
                        </Grid>
                    </GroupBox>
                    
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch" Background="LightGray"/>
                    
                    <!-- Tag Management Panel -->
                    <GroupBox Header="Tag Management" Grid.Column="2">
                        <ScrollViewer>
                            <StackPanel Margin="10">
                                <TextBlock x:Name="NoTagSelectionText" Text="Select a tag to manage or add a new one" 
                                           FontStyle="Italic" Foreground="Gray"/>
                                
                                <!-- Tag Details -->
                                <GroupBox x:Name="TagDetailsGroup" Header="Tag Details" Visibility="Collapsed" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Label Grid.Row="0" Grid.Column="0" Content="ID:" FontWeight="Bold"/>
                                        <TextBlock x:Name="TagIdText" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap"/>
                                        
                                        <Label Grid.Row="1" Grid.Column="0" Content="Name:" FontWeight="Bold"/>
                                        <TextBlock x:Name="TagNameText" Grid.Row="1" Grid.Column="1"/>
                                    </Grid>
                                </GroupBox>
                                
                                <!-- Tag Actions -->
                                <GroupBox x:Name="TagActionsGroup" Header="Actions" Visibility="Collapsed">
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="DeleteTagButton" Content="Delete Tag" 
                                                Margin="5" Padding="10,5" Click="DeleteTagButton_Click"
                                                Background="LightCoral"/>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Admin Tab -->
            <TabItem Header="Admin" x:Name="AdminTab" IsEnabled="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Users List -->
                    <GroupBox Header="Users" Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <Button x:Name="RefreshUsersButton" Content="Refresh" 
                                        Margin="5" Padding="5" Click="RefreshUsersButton_Click"/>
                                <Button x:Name="AddUserButton" Content="Add User" 
                                        Margin="0,5,5,5" Padding="5" Click="AddUserButton_Click"/>
                            </StackPanel>
                            
                            <DataGrid x:Name="UsersDataGrid" Grid.Row="1" Margin="5" 
                                      AutoGenerateColumns="False" SelectionMode="Single"
                                      CanUserAddRows="False" CanUserDeleteRows="False"
                                      ItemsSource="{Binding Users}"
                                      SelectedItem="{Binding SelectedUser}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="120"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="80"/>
                                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                    
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch" Background="LightGray"/>
                    
                    <!-- User Management Panel -->
                    <GroupBox Header="User Management" Grid.Column="2">
                        <ScrollViewer>
                            <StackPanel Margin="10">
                                <TextBlock x:Name="NoUserSelectionText" Text="Select a user to manage" 
                                           FontStyle="Italic" Foreground="Gray"/>
                                
                                <!-- User Details -->
                                <GroupBox x:Name="UserDetailsGroup" Header="User Details" Visibility="Collapsed" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Label Grid.Row="0" Grid.Column="0" Content="ID:" FontWeight="Bold"/>
                                        <TextBlock x:Name="UserIdText" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap"/>
                                        
                                        <Label Grid.Row="1" Grid.Column="0" Content="Username:" FontWeight="Bold"/>
                                        <TextBlock x:Name="UsernameText" Grid.Row="1" Grid.Column="1"/>
                                        
                                        <Label Grid.Row="2" Grid.Column="0" Content="Email:" FontWeight="Bold"/>
                                        <TextBlock x:Name="UserEmailText" Grid.Row="2" Grid.Column="1"/>
                                        
                                        <Label Grid.Row="3" Grid.Column="0" Content="Role:" FontWeight="Bold"/>
                                        <ComboBox x:Name="UserRoleComboBox" Grid.Row="3" Grid.Column="1" Margin="0,5"/>
                                        
                                        <Label Grid.Row="4" Grid.Column="0" Content="Active:" FontWeight="Bold"/>
                                        <CheckBox x:Name="UserActiveCheckBox" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"/>
                                        
                                        <Label Grid.Row="5" Grid.Column="0" Content="Last Login:" FontWeight="Bold"/>
                                        <TextBlock x:Name="LastLoginText" Grid.Row="5" Grid.Column="1"/>
                                    </Grid>
                                </GroupBox>
                                
                                <!-- User Actions -->
                                <GroupBox x:Name="UserActionsGroup" Header="Actions" Visibility="Collapsed">
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="UpdateUserButton" Content="Update User" 
                                                Margin="5" Padding="10,5" Click="UpdateUserButton_Click"/>
                                        <Button x:Name="DeleteUserButton" Content="Delete User" 
                                                Margin="5" Padding="10,5" Click="DeleteUserButton_Click"
                                                Background="LightCoral"/>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="1">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="{Binding StatusText}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>