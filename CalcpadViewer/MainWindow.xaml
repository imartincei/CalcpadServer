<Window x:Class="CalcpadViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calcpad File Viewer" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Connection Panel -->
        <GroupBox Header="Connection Settings" Grid.Row="0" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- MinIO Settings -->
                <Label Grid.Row="0" Grid.Column="0" Content="Endpoint:" VerticalAlignment="Center"/>
                <TextBox x:Name="EndpointTextBox" Grid.Row="0" Grid.Column="1" Margin="5" Text="localhost:9000"/>
                
                <Label Grid.Row="0" Grid.Column="2" Content="Bucket:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="BucketTextBox" Grid.Row="0" Grid.Column="3" Margin="5" Text="calcpad-storage"/>
                
                <Button x:Name="ConnectButton" Grid.Row="0" Grid.Column="4" Content="Connect" 
                        Margin="10,5,0,5" Padding="10,5" Click="ConnectButton_Click"/>
                
                <Label Grid.Row="1" Grid.Column="0" Content="Access Key:" VerticalAlignment="Center"/>
                <TextBox x:Name="AccessKeyTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Text="calcpad-admin"/>
                
                <Label Grid.Row="1" Grid.Column="2" Content="Secret Key:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <PasswordBox x:Name="SecretKeyBox" Grid.Row="1" Grid.Column="3" Margin="5"/>
                
                <CheckBox x:Name="UseSSLCheckBox" Grid.Row="1" Grid.Column="4" Content="Use SSL" 
                          VerticalAlignment="Center" Margin="10,0,0,0"/>
                
                <!-- Admin Login -->
                <Label Grid.Row="2" Grid.Column="0" Content="Admin User:" VerticalAlignment="Center"/>
                <TextBox x:Name="AdminUsernameTextBox" Grid.Row="2" Grid.Column="1" Margin="5" Text="admin"/>
                
                <Label Grid.Row="2" Grid.Column="2" Content="Admin Password:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <PasswordBox x:Name="AdminPasswordBox" Grid.Row="2" Grid.Column="3" Margin="5"/>
            </Grid>
        </GroupBox>
        
        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Files Tab -->
            <TabItem Header="Files" x:Name="FilesTab">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Files List -->
                    <GroupBox Header="Files" Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <Button x:Name="RefreshButton" Content="Refresh" 
                                        Margin="5" Padding="5" Click="RefreshButton_Click"/>
                                <Button x:Name="UploadButton" Content="Upload File" 
                                        Margin="0,5,5,5" Padding="5" Click="UploadButton_Click" IsEnabled="False"/>
                                <Button x:Name="DownloadButton" Content="Download File" 
                                        Margin="0,5,5,5" Padding="5" Click="DownloadButton_Click" IsEnabled="False"/>
                            </StackPanel>
                            
                            <ListBox x:Name="FilesListBox" Grid.Row="1" Margin="5" 
                                     SelectionChanged="FilesListBox_SelectionChanged"/>
                        </Grid>
                    </GroupBox>
                    
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch" Background="LightGray"/>
                    
                    <!-- Metadata Panel -->
                    <GroupBox Header="File Metadata" Grid.Column="2">
                        <ScrollViewer>
                            <StackPanel x:Name="MetadataPanel" Margin="10">
                                <TextBlock x:Name="NoSelectionText" Text="Select a file to view metadata" 
                                           FontStyle="Italic" Foreground="Gray"/>
                                
                                <!-- File Info -->
                                <GroupBox x:Name="FileInfoGroup" Header="File Information" Visibility="Collapsed" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Label Grid.Row="0" Grid.Column="0" Content="File Name:" FontWeight="Bold"/>
                                        <TextBlock x:Name="FileNameText" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap"/>
                                        
                                        <Label Grid.Row="1" Grid.Column="0" Content="Size:" FontWeight="Bold"/>
                                        <TextBlock x:Name="FileSizeText" Grid.Row="1" Grid.Column="1"/>
                                        
                                        <Label Grid.Row="2" Grid.Column="0" Content="Last Modified:" FontWeight="Bold"/>
                                        <TextBlock x:Name="LastModifiedText" Grid.Row="2" Grid.Column="1"/>
                                        
                                        <Label Grid.Row="3" Grid.Column="0" Content="Content Type:" FontWeight="Bold"/>
                                        <TextBlock x:Name="ContentTypeText" Grid.Row="3" Grid.Column="1"/>
                                        
                                        <Label Grid.Row="4" Grid.Column="0" Content="ETag:" FontWeight="Bold"/>
                                        <TextBlock x:Name="ETagText" Grid.Row="4" Grid.Column="1" TextWrapping="Wrap"/>
                                    </Grid>
                                </GroupBox>
                                
                                <!-- Structured Metadata -->
                                <GroupBox x:Name="StructuredMetadataGroup" Header="Structured Metadata" Visibility="Collapsed" Margin="0,0,0,10">
                                    <ItemsControl x:Name="StructuredMetadataItems">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Column="0" Content="{Binding Key}" FontWeight="Bold"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Value}" TextWrapping="Wrap"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </GroupBox>
                                
                                <!-- Custom Metadata -->
                                <GroupBox x:Name="CustomMetadataGroup" Header="Custom Metadata" Visibility="Collapsed" Margin="0,0,0,10">
                                    <ItemsControl x:Name="CustomMetadataItems">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Column="0" Content="{Binding Key}" FontWeight="Bold"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Value}" TextWrapping="Wrap"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </GroupBox>
                                
                                <!-- Tags -->
                                <GroupBox x:Name="TagsGroup" Header="Tags" Visibility="Collapsed">
                                    <ItemsControl x:Name="TagsItems">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Column="0" Content="{Binding Key}" FontWeight="Bold"/>
                                                    <TextBlock Grid.Column="1" Text="{Binding Value}" TextWrapping="Wrap"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Admin Tab -->
            <TabItem Header="Admin" x:Name="AdminTab" IsEnabled="False">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Users List -->
                    <GroupBox Header="Users" Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <Button x:Name="RefreshUsersButton" Content="Refresh" 
                                        Margin="5" Padding="5" Click="RefreshUsersButton_Click"/>
                                <Button x:Name="AddUserButton" Content="Add User" 
                                        Margin="0,5,5,5" Padding="5" Click="AddUserButton_Click"/>
                            </StackPanel>
                            
                            <DataGrid x:Name="UsersDataGrid" Grid.Row="1" Margin="5" 
                                      AutoGenerateColumns="False" SelectionMode="Single"
                                      SelectionChanged="UsersDataGrid_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="120"/>
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                                    <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="80"/>
                                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                    
                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch" Background="LightGray"/>
                    
                    <!-- User Management Panel -->
                    <GroupBox Header="User Management" Grid.Column="2">
                        <ScrollViewer>
                            <StackPanel Margin="10">
                                <TextBlock x:Name="NoUserSelectionText" Text="Select a user to manage" 
                                           FontStyle="Italic" Foreground="Gray"/>
                                
                                <!-- User Details -->
                                <GroupBox x:Name="UserDetailsGroup" Header="User Details" Visibility="Collapsed" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Label Grid.Row="0" Grid.Column="0" Content="ID:" FontWeight="Bold"/>
                                        <TextBlock x:Name="UserIdText" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap"/>
                                        
                                        <Label Grid.Row="1" Grid.Column="0" Content="Username:" FontWeight="Bold"/>
                                        <TextBlock x:Name="UsernameText" Grid.Row="1" Grid.Column="1"/>
                                        
                                        <Label Grid.Row="2" Grid.Column="0" Content="Email:" FontWeight="Bold"/>
                                        <TextBlock x:Name="UserEmailText" Grid.Row="2" Grid.Column="1"/>
                                        
                                        <Label Grid.Row="3" Grid.Column="0" Content="Role:" FontWeight="Bold"/>
                                        <ComboBox x:Name="UserRoleComboBox" Grid.Row="3" Grid.Column="1" Margin="0,5"/>
                                        
                                        <Label Grid.Row="4" Grid.Column="0" Content="Active:" FontWeight="Bold"/>
                                        <CheckBox x:Name="UserActiveCheckBox" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center"/>
                                        
                                        <Label Grid.Row="5" Grid.Column="0" Content="Last Login:" FontWeight="Bold"/>
                                        <TextBlock x:Name="LastLoginText" Grid.Row="5" Grid.Column="1"/>
                                    </Grid>
                                </GroupBox>
                                
                                <!-- User Actions -->
                                <GroupBox x:Name="UserActionsGroup" Header="Actions" Visibility="Collapsed">
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="UpdateUserButton" Content="Update User" 
                                                Margin="5" Padding="10,5" Click="UpdateUserButton_Click"/>
                                        <Button x:Name="DeleteUserButton" Content="Delete User" 
                                                Margin="5" Padding="10,5" Click="DeleteUserButton_Click"
                                                Background="LightCoral"/>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>