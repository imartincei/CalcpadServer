<Window x:Class="CalcpadViewer.UploadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upload File" Height="600" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- File Selection -->
        <GroupBox Header="File Selection" Grid.Row="0" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Row="0" Grid.Column="0" Content="Selected File:" Grid.ColumnSpan="2"/>
                <TextBox x:Name="FilePathTextBox" Grid.Row="1" Grid.Column="0" Margin="0,0,5,0" IsReadOnly="True"/>
                <Button x:Name="BrowseButton" Grid.Row="1" Grid.Column="1" Content="Browse..." 
                        Padding="10,5" Click="BrowseButton_Click"/>
            </Grid>
        </GroupBox>
        
        <!-- Metadata Forms -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <!-- Structured Metadata -->
                <GroupBox Header="Structured Metadata" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Grid.Column="0" Content="Filename:" VerticalAlignment="Center"/>
                        <TextBox x:Name="FilenameTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>
                        
                        <Label Grid.Row="1" Grid.Column="0" Content="Reviewed By:" VerticalAlignment="Center"/>
                        <TextBox x:Name="ReviewedByTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>
                        
                        <Label Grid.Row="2" Grid.Column="0" Content="Date Reviewed:" VerticalAlignment="Center"/>
                        <DatePicker x:Name="DateReviewedPicker" Grid.Row="2" Grid.Column="1" Margin="5"/>
                        
                        <Label Grid.Row="3" Grid.Column="0" Content="Tested By:" VerticalAlignment="Center"/>
                        <TextBox x:Name="TestedByTextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>
                        
                        <Label Grid.Row="4" Grid.Column="0" Content="Date Tested:" VerticalAlignment="Center"/>
                        <DatePicker x:Name="DateTestedPicker" Grid.Row="4" Grid.Column="1" Margin="5"/>
                    </Grid>
                </GroupBox>
                
                
                <!-- Tags -->
                <GroupBox Header="Tags" Margin="0,0,0,10">
                    <StackPanel>
                        <Label Content="Select Tags:"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Search Box -->
                            <StackPanel Grid.Row="0" Margin="0,5">
                                <Label Content="Search Tags:" FontSize="10" Margin="0,0,0,-5"/>
                                <TextBox x:Name="TagSearchBox" TextChanged="TagSearchBox_TextChanged"/>
                            </StackPanel>
                            
                            <!-- Available Tags List -->
                            <ListBox x:Name="AvailableTagsListBox" Grid.Row="1" Height="100" Margin="0,5"
                                     SelectionMode="Multiple" SelectionChanged="AvailableTagsListBox_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                  Checked="TagCheckBox_Changed" Unchecked="TagCheckBox_Changed"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <!-- Selected Tags Display -->
                            <TextBlock Grid.Row="2" Margin="0,5,0,0">
                                <Run Text="Selected: " FontWeight="Bold"/>
                                <Run x:Name="SelectedTagsText" Text="None"/>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="UploadButton" Content="Upload" Padding="20,5" Margin="0,0,10,0" 
                    Click="UploadButton_Click" IsDefault="True" IsEnabled="False"/>
            <Button x:Name="CancelButton" Content="Cancel" Padding="20,5" 
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>